<h2>
    <i class=@((EChecado ? "bi bi-check-square-fill" : "bi bi-square") + " " + cssComumDoCheckbox) @onclick="Checkbox_ClickAsync"></i>
</h2>

@code {
    [Parameter]
    public bool EChecado { get; set; }
    [Parameter]
    public EventCallback<bool> EChecadoChanged { get; set; }
    [Parameter]
    public bool EDesabilitado { get; set; }
    private string cssComumDoCheckbox => EDesabilitado ? "text-white-50" : "onhover-text-hrh-1-non-important onhover-pointer-non-important";
    public async Task Checkbox_ClickAsync()
    {
        if (!EDesabilitado)
        {
            await EChecadoChanged.InvokeAsync(!EChecado);
        }
    }
}