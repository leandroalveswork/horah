<h2 class='m-0'>
    <i class=@((EChecado ? "bi bi-check-square-fill" : "bi bi-square") + " " + cssComumDoCheckbox) @onclick="TicarAsync"></i>
</h2>

@code {
    [Parameter]
    public bool EChecado { get; set; }
    [Parameter]
    public EventCallback<bool> EChecadoChanged { get; set; }
    [Parameter]
    public bool EDesabilitado { get; set; }
    private string cssComumDoCheckbox => EDesabilitado ? "text-hrh-bloqueado" : "onhover-text-hrh-1-non-important onhover-pointer-non-important";
    public async Task TicarAsync()
    {
        if (!EDesabilitado)
        {
            await EChecadoChanged.InvokeAsync(!EChecado);
        }
    }
}