@using Domain.Models.Bsn.Autorizacao

<div class="row g-0 border-non-important border-top-0 border-start-0 border-end-0 border-2 border-hrh-1 position-fixed w-100 bg-hrh-fundo-non-important z-index-1000-non-important">
    <div class="col-3 d-md-none"></div>
    <div class="col-6 d-flex col-md-12 justify-content-center">
        <a href="" class='text-hrh-texto text-decoration-none'><h3 class='py-3 px-3 m-0'>Hora H<span class="oi oi-clock"></span></h3></a>
    </div>
    <div class="col-3 d-md-none d-flex justify-content-end">
        @if (RefColaboradorLogado.EstaLogado)
        {
            <button title="Navigation menu" class='px-4 border-0 hrh-bg-inherit-non-important text-hrh-texto-non-important onhover-bg-hrh-texto-non-important onhover-text-hrh-fundo-non-important' @onclick="@(() => SetNavToggled.InvokeAsync(!NavToggled))">
                <span class="oi oi-menu"></span>
            </button>
        }
    </div>
    @if (RefColaboradorLogado.EstaLogado)
    {
        <div class="col-12 d-flex justify-content-center align-items-center bg-hrh-1-non-important text-hrh-fundo-non-important">
            <span class="oi oi-person"></span><span class="ps-2">@RefColaboradorLogado.Login</span>
        </div>
    }
</div>

<div class="row g-0 border-non-important border-top-0 border-start-0 border-end-0 border-2 border-hrh-1 invisible">
    <div class="col-3 d-md-none"></div>
    <div class="col-6 d-flex col-md-12 justify-content-center">
        <a href="" class='text-hrh-texto text-decoration-none'><h3 class='py-3 px-3 m-0'>Hora H<span class="oi oi-clock"></span></h3></a>
    </div>
    <div class="col-3 d-md-none d-flex justify-content-end">
        @if (RefColaboradorLogado.EstaLogado)
        {
            <button title="Navigation menu" class='px-4 border-0 hrh-bg-inherit-non-important text-hrh-texto-non-important onhover-bg-hrh-texto-non-important onhover-text-hrh-fundo-non-important' @onclick="@(() => SetNavToggled.InvokeAsync(!NavToggled))">
                <span class="oi oi-menu"></span>
            </button>
        }
    </div>
    @if (RefColaboradorLogado.EstaLogado)
    {
        <div class="col-12 d-flex justify-content-center bg-hrh-1-non-important text-hrh-fundo-non-important">
            <span class="oi oi-person"></span><span class="ps-2">@RefColaboradorLogado.Login</span>
        </div>
    }
</div>

@code {
    [Parameter]
    public bool NavToggled { get; set; }
    [Parameter]
    public EventCallback<bool> SetNavToggled { get; set; }
    [Parameter]
    public BsnColaboradorLogado RefColaboradorLogado { get; set; } = new BsnColaboradorLogado();
}